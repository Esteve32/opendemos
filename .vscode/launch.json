{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "Gemini Manager CLI",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/gemini_manager.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["--help"],
            "justMyCode": true
        },
        {
            "name": "Web Interface",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/gemini_manager.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["web"],
            "justMyCode": true
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "."
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        }
    ]
}