<script>
    function wrapLabels(labels, maxLength) {
        return labels.map(label => {
            if (typeof label !== 'string' || label.length <= maxLength) {
                return label;
            }
            const words = label.split(' ');
            const lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + ' ' + word).trim().length > maxLength) {
                    lines.push(currentLine.trim());
                    currentLine = word;
                } else {
                    currentLine = (currentLine + ' ' + word).trim();
                }
            });
            if (currentLine) {
                lines.push(currentLine.trim());
            }
            return lines;
        });
    }

    const tooltipTitleCallback = {
        plugins: {
            tooltip: {
                callbacks: {
                    title: function(tooltipItems) {
                        const item = tooltipItems[0];
                        let label = item.chart.data.labels[item.dataIndex];
                        if (Array.isArray(label)) {
                          return label.join(' ');
                        } else {
                          return label;
                        }
                    }
                }
            }
        }
    };
    
    const palette = {
        name: 'Brilliant Blues & Energetic Tones',
        blue: '#0047AB',
        cobalt: '#002244',
        sky: '#87CEEB',
        orange: '#FFA500',
        slate: '#64748b',
        lightGray: '#f1f5f9'
    };

    const tcoCtx = document.getElementById('tcoChart').getContext('2d');
    const tcoChart = new Chart(tcoCtx, {
        type: 'bar',
        data: {
            labels: ['Recommended Stack', 'HubSpot Sales & Mkt Hub Pro', 'Mid-Level Full-Stack Dev (1)'],
            datasets: [{
                label: 'First Year Total Cost of Ownership (USD)',
                data: [7672, 21600, 85000],
                backgroundColor: [palette.blue, palette.orange, palette.cobalt],
                borderColor: [palette.blue, palette.orange, palette.cobalt],
                borderWidth: 1
            }]
        },
        options: {
            maintainAspectRatio: false,
            indexAxis: 'y',
            scales: {
                x: {
                    beginAtZero: true,
                    ticks: {
                        callback: function(value) {
                            return '$' + new Intl.NumberFormat().format(value);
                        }
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                },
                tooltip: tooltipTitleCallback.plugins.tooltip
            }
        }
    });

    const radarCtx = document.getElementById('featureRadarChart').getContext('2d');
    const featureRadarChart = new Chart(radarCtx, {
        type: 'radar',
        data: {
            labels: wrapLabels(['Great UI/UX', 'Two-Way GCal Sync', 'PM Dependencies', 'CRM LinkedIn/WA Sync', 'Chaordic Customization', 'Cost-Effectiveness'], 16),
            datasets: [
                {
                    label: 'Notion + Folk',
                    data: [9, 7, 7, 8, 9, 9],
                    borderColor: palette.blue,
                    backgroundColor: 'rgba(0, 71, 171, 0.2)',
                    pointBackgroundColor: palette.blue,
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: palette.blue
                },
                {
                    label: 'HubSpot',
                    data: [7, 8, 6, 9, 6, 5],
                    borderColor: palette.orange,
                    backgroundColor: 'rgba(255, 165, 0, 0.2)',
                    pointBackgroundColor: palette.orange,
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: palette.orange
                },
                {
                    label: 'Motion',
                    data: [8, 9, 8, 3, 5, 7],
                    borderColor: palette.cobalt,
                    backgroundColor: 'rgba(0, 34, 68, 0.2)',
                    pointBackgroundColor: palette.cobalt,
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: palette.cobalt
                }
            ]
        },
        options: {
            maintainAspectRatio: false,
            scales: {
                r: {
                    angleLines: { display: true },
                    suggestedMin: 0,
                    suggestedMax: 10,
                    pointLabels: {
                        font: {
                            size: 11
                        }
                    }
                }
            },
            plugins: {
               tooltip: tooltipTitleCallback.plugins.tooltip,
               legend: {
                   position: 'top',
               }
            }
        }
    });

</script>
